<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="10dp"
    tools:context="app.ctrlsoftware.com.whatsapp.activity.LoginActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/largura_logo"
            android:layout_height="@dimen/altura_logo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            app:srcCompat="@drawable/logo" />

        <EditText
            android:id="@+id/caixaNomeId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="28dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textAlignment="center"
            android:hint="@string/cad_nome"
            android:textColor="@color/textColorPrimary"/>

        <EditText
            android:id="@+id/caixaFoneCodigoPaisId"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/caixaNomeId"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="number"
            android:hint="+55"
            android:textAlignment="center"
            android:textColor="@color/textColorPrimary" />

        <EditText
            android:id="@+id/caixaFoneCodigoDddId"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:layout_alignBaseline="@+id/caixaFoneCodigoPaisId"
            android:layout_alignBottom="@+id/caixaFoneCodigoPaisId"
            android:layout_toEndOf="@+id/caixaFoneCodigoPaisId"
            android:hint="44"
            android:textAlignment="center"
            android:textColor="@color/textColorPrimary" />

        <EditText
            android:id="@+id/caixaFoneId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:layout_alignBaseline="@+id/caixaFoneCodigoDddId"
            android:layout_alignBottom="@+id/caixaFoneCodigoDddId"
            android:layout_toEndOf="@+id/caixaFoneCodigoDddId"
            android:hint="98888-7777"
            android:textColor="@color/textColorPrimary" />

        <Button
            android:id="@+id/btnCadastrarId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/caixaFoneCodigoPaisId"
            android:layout_marginTop="26dp"
            android:background="@color/colorPrimaryDark"
            android:layout_toStartOf="@+id/caixaFoneId"
            android:text="@string/btn_cadastrar"
            android:textColor="@color/textColorPrimary"
            android:layout_alignParentEnd="true" />
        />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
